<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post">

    <div class="form-group">
      <label for="formTitle">Title</label>
      <input type="text" name="newTitle" class="form-control" id="formTitle" autocomplete="off">
    </div>
    
    <div class="form-group">
        <label for="textarea">Post</label>
        <textarea name="newText" class="form-control" id="textarea" rows="4"></textarea>
    </div>

    <button type="submit" name="submit" class="btn btn-success">Publish</button>
</form>

